{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/profile",
        "destination": "/static-pages/profile.html"
      },
      {
        "source": "/property/*",
        "destination": "/static-pages/property.html"
      },
      {
        "source": "**",
        "destination": "/static-pages/index.html"
      }
    ]
  }
}
